{{template "base" .}}

{{define "title"}}Snip #{{.Snip.ID}}{{end}}

{{define "body"}}
  {{with .Snip}}
  <div class='snip'>
    <div class='metadata'>
      <strong>{{.Title}}</strong>
      <span>{{.ID}}</span>
    </div>
    <pre><code>{{.Content}}</code></pre>
    <div class='metadata'>
      <time>Created: {{.Created}}</time>
      <time>Expires: {{.Expires}}</time>
    </div>
  </div>
  {{end}}
{{end}}